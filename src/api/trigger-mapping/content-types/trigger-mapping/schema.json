{
  "kind": "collectionType",
  "collectionName": "trigger_mappings",
  "info": {
    "singularName": "trigger-mapping",
    "pluralName": "trigger-mappings",
    "displayName": "Trigger Mapping"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "eventKey": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "USER_WELCOME",
        "OTP_VERIFICATION",
        "FACILITY_VERIFIED",
        "DOCUMENT_REJECTED",
        "INVITE_RESIDENTIAL",
        "INVITE_COMMERCIAL",
        "INVITE_OPERATOR",
        "INVITE_PARTNER"
      ]
    },
    "template": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::template.template"
    },
    "fallbackTemplate": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::template.template"
    },
    "enabled": {
      "type": "boolean",
      "default": true
    },
    "audience": {
      "type": "enumeration",
      "enum": [
        "Customer",
        "Partner",
        "SalesAgent"
      ]
    }
  }
}
